<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<HBox fx:id="userCard" alignment="CENTER_LEFT" prefHeight="80.0" prefWidth="200.0" spacing="8" styleClass="user-card" stylesheets="@../styles/components.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="aquaMotor.aquaMotorProyecto.controllers.MechanicCardController">

    <!-- Placeholder para imagen (vacÃ­o por defecto) -->
    <ImageView fx:id="photoView" fitHeight="61.0" fitWidth="58.0" preserveRatio="true" smooth="true" styleClass="user-image" />

    <!-- Datos del usuario alineados a la derecha -->
    <VBox alignment="CENTER_RIGHT" prefHeight="55.0" prefWidth="140.0" spacing="4" styleClass="user-data">

        <padding>
            <!-- Empuja todo el texto hacia la derecha -->
            <Insets right="8" />
        </padding>

        <HBox spacing="6">
            <Label styleClass="user-label-title" text="NAME:" />
            <Label fx:id="namelabel" styleClass="user-label-value" text="NAME" />
        </HBox>

        <HBox spacing="6">
            <Label styleClass="user-label-title" text="EMAIL:" />
            <Label fx:id="emaillabel" styleClass="user-label-value" text="EMAIL" />
        </HBox>

        <HBox prefHeight="16.0" prefWidth="108.0" spacing="6">
            <Label prefHeight="16.0" prefWidth="66.0" styleClass="user-label-title" text="SPECIALITY:" />
            <Label fx:id="phonelabel" prefHeight="16.0" prefWidth="55.0" styleClass="user-label-value" text="SPECIALITY" />
        </HBox>

        <HBox alignment="CENTER" prefWidth="140.0" spacing="6">
            <children>
                <Button onAction="#handleDetails" prefHeight="30.0" prefWidth="180.0" minWidth="160.0" wrapText="true" style="-fx-background-color: #2f7f3b; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 12px; -fx-padding: 6 10 6 10; -fx-background-radius: 4;" text="MECHANIC DETAILS" />
            </children>
        </HBox>
    </VBox>
</HBox>
