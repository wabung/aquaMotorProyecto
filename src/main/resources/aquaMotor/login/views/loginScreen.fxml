<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<StackPane fx:id="rootPane" maxHeight="Infinity" maxWidth="Infinity" minHeight="400.0" minWidth="600.0"
           styleClass="main-background" stylesheets="@../styles/loginCss.css" xmlns="http://javafx.com/javafx/17.0.12"
           xmlns:fx="http://javafx.com/fxml/1" fx:controller="login.controller.LoginController">
    <children>
        <VBox alignment="CENTER" spacing="30.0">
            <children>
                <Label alignment="CENTER" maxWidth="800.0" styleClass="title-label" text="Welcome to Aqua Motor"
                       textAlignment="CENTER">
                    <font>
                        <Font name="System Bold" size="32.0"/>
                    </font>
                </Label>

                <StackPane alignment="TOP_CENTER" maxWidth="600.0" VBox.vgrow="SOMETIMES">
                    <children>
                        <VBox alignment="CENTER" spacing="20.0" styleClass="login-card">
                            <StackPane.margin>
                                <Insets top="60.0"/>
                            </StackPane.margin>
                            <padding>
                                <Insets bottom="40.0" left="40.0" right="40.0" top="70.0"/>
                            </padding>
                            <children>
                                <GridPane hgap="10.0" vgap="15.0">
                                    <columnConstraints>
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="100.0" percentWidth="40.0"/>
                                        <ColumnConstraints hgrow="ALWAYS" minWidth="150.0" percentWidth="60.0"/>
                                    </columnConstraints>
                                    <rowConstraints>
                                        <RowConstraints minHeight="40.0" vgrow="SOMETIMES"/>
                                        <RowConstraints minHeight="40.0" vgrow="SOMETIMES"/>
                                    </rowConstraints>
                                    <children>
                                        <Label alignment="CENTER" maxWidth="Infinity" styleClass="field-label"
                                               text="EMAIL">
                                            <font>
                                                <Font size="18.0"/>
                                            </font>
                                        </Label>
                                        <Label alignment="CENTER" maxWidth="Infinity" styleClass="field-label"
                                               text="PASSWORD" GridPane.rowIndex="1">
                                            <font>
                                                <Font size="18.0"/>
                                            </font>
                                        </Label>
                                        <TextField fx:id="usernameField" styleClass="text-field"
                                                   GridPane.columnIndex="1"/>
                                        <PasswordField fx:id="passwordField" styleClass="text-field"
                                                       GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                                    </children>
                                </GridPane>

                                <Button maxHeight="50.0" maxWidth="Infinity" mnemonicParsing="false"
                                        onAction="#handleLogin" styleClass="login-btn" text="LOG IN">
                                    <font>
                                        <Font size="20.0"/>
                                    </font>
                                    <VBox.margin>
                                        <Insets top="20.0"/>
                                    </VBox.margin>
                                </Button>
                            </children>
                        </VBox>

                        <StackPane maxHeight="-Infinity" maxWidth="-Infinity">
                            <children>
                                <Circle radius="60.0" styleClass="avatar-circle"/>
                                <ImageView fitHeight="114.0" fitWidth="139.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@../../login/images/aquamotor.png"/>
                                    </image>
                                </ImageView>
                            </children>
                        </StackPane>
                    </children>
                </StackPane>
            </children>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </padding>
        </VBox>
    </children>
</StackPane>
