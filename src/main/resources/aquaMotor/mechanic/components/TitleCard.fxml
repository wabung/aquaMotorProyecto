<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="titleWidget"
            maxHeight="200.0" maxWidth="Infinity" minHeight="100.0"
            prefHeight="150.0" prefWidth="1000.0"
            stylesheets="@../styles/components.css"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="mechanic.controller.TitleCardController">

   <center>
      <HBox alignment="CENTER" spacing="20.0" BorderPane.alignment="CENTER">
         <children>
            <ImageView fx:id="imageTitle" fitHeight="100.0" fitWidth="120.0" pickOnBounds="true" preserveRatio="true" />

            <Label fx:id="titleLabel" stylesheets="@../styles/components.css" text="TITLE">
               <font>
                  <Font name="System Bold" size="42.0" />
               </font>
            </Label>
         </children>
         <padding>
            <Insets left="20.0" right="20.0" />
         </padding>
      </HBox>
   </center>
</BorderPane>