<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="rootPane" prefHeight="700.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="aquaMotor.aquaMotorProyecto.MechanicDashboardController">

    <children>
        <VBox alignment="TOP_CENTER" spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>

                <fx:include fx:id="header" source="../../elements/titleCard.fxml" />

                <HBox alignment="CENTER" spacing="30.0" VBox.vgrow="ALWAYS">
                    <children>
                        <fx:include fx:id="cardVehicles" source="../../elements/informationCard.fxml" HBox.hgrow="ALWAYS" />
                        <fx:include fx:id="active" source="../../elements/informationCard.fxml" HBox.hgrow="ALWAYS" />
                        <fx:include fx:id="cardPending" source="../../elements/informationCard.fxml" HBox.hgrow="ALWAYS" />
                    </children>
                    <padding>
                        <Insets bottom="30.0" left="20.0" right="20.0" />
                    </padding>
                    <VBox.margin>
                        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
                    </VBox.margin>
                </HBox>

                <VBox alignment="CENTER" spacing="20.0" VBox.vgrow="SOMETIMES">
                    <children>
                        <fx:include fx:id="btnMyWorkDay" source="../../elements/bigButton.fxml" />
                        <fx:include fx:id="btnWorkInProgress" source="../../elements/bigButton.fxml" />
                    </children>
                    <VBox.margin>
                        <Insets bottom="80.0" left="90.0" right="90.0" top="20.0" />
                    </VBox.margin>
                </VBox>
            </children>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
        </VBox>
    </children>
   <stylesheets>
      <URL value="@../styles/dashboard.css" />
      <URL value="@../../styles/dashboard.css" />
   </stylesheets>
</AnchorPane>
