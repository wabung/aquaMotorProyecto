<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <!-- Configuración de conexión a MySQL -->
        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/dealership?useSSL=false&amp;serverTimezone=Europe/Madrid&amp;allowPublicKeyRetrieval=true</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">root</property>

        <!-- Dialecto de MySQL -->
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>

        <!-- Configuración de logging -->
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.format_sql">true</property>
        <property name="hibernate.use_sql_comments">true</property>

        <property name="hibernate.hbm2ddl.auto">update</property>

        <!-- Mapeo de entidades -->
        <mapping class="database.model.User"/>
        <mapping class="database.model.Boss"/>
        <mapping class="database.model.Client"/>
        <mapping class="database.model.Mechanic"/>
        <mapping class="database.model.Offer"/>
        <mapping class="database.model.Parts"/>
        <mapping class="database.model.Repairment"/>
        <mapping class="database.model.RepairmentRequires"/>
        <mapping class="database.model.RepairmentRequiresId"/>
        <mapping class="database.model.SalesPerson"/>
        <mapping class="database.model.Sold"/>
        <mapping class="database.model.Vehicle"/>

    </session-factory>
</hibernate-configuration>



