<AnchorPane prefHeight="683.0" prefWidth="960.0" stylesheets="@../../styles/newCar.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="aquaMotor.aquaMotorProyecto.NewCarController">
   <children>
      <!-- AppBar con anchors -->
      <AnchorPane AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <fx:include fx:id="appBar" source="../../elements/appBar.fxml" />
         </children>
      </AnchorPane>
      
      <!-- Formulario izquierda con anchors -->
      <GridPane styleClass="form-grid" AnchorPane.leftAnchor="75.0" AnchorPane.topAnchor="150.0">
          <columnConstraints>
              <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0" />
          </columnConstraints>
          <rowConstraints>
              <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          </rowConstraints>
          <children>
              <Label styleClass="form-label" text="LICENSE PLATE:" />
              <Label styleClass="form-label" text="MODEL:" GridPane.rowIndex="1" />
              <TextField fx:id="txtLicensePlate" styleClass="form-field" GridPane.columnIndex="1" />
              <TextField fx:id="txtModel" styleClass="form-field" GridPane.columnIndex="1" GridPane.rowIndex="1" />
          </children>
      </GridPane>

      <!-- Formulario derecha con anchors -->
      <GridPane styleClass="form-grid" AnchorPane.rightAnchor="75.0" AnchorPane.topAnchor="150.0">
          <columnConstraints>
              <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0" />
          </columnConstraints>
          <rowConstraints>
              <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          </rowConstraints>
          <children>
              <Label styleClass="form-label" text="BRAND:" />
              <Label styleClass="form-label" text="COLOR:" GridPane.rowIndex="1" />
              <TextField fx:id="txtBrand" styleClass="form-field" GridPane.columnIndex="1" />
              <TextField fx:id="txtColor" styleClass="form-field" GridPane.columnIndex="1" GridPane.rowIndex="1" />
          </children>
      </GridPane>

      <!-- Botones y combo centrados -->
      <HBox alignment="CENTER" spacing="200.0" AnchorPane.leftAnchor="87.0" AnchorPane.rightAnchor="87.0" AnchorPane.topAnchor="259.0">
          <children>
              <Button mnemonicParsing="false" onAction="#handleSave" prefHeight="26.0" prefWidth="120.0" styleClass="form-button" text="SAVE" />
              <ComboBox fx:id="cboType" prefWidth="150.0" promptText="TYPE" styleClass="type-combo" />
              <Button mnemonicParsing="false" onAction="#handleClear" prefHeight="26.0" prefWidth="120.0" styleClass="form-button" text="CLEAR" />
          </children>
      </HBox>
      
      <!-- Grid de vehÃ­culos con anchors -->
      <GridPane fx:id="vehicleGrid" hgap="10.0" vgap="20.0" AnchorPane.leftAnchor="37.0" AnchorPane.rightAnchor="37.0" AnchorPane.topAnchor="325.0" AnchorPane.bottomAnchor="43.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
      </GridPane>
   </children>
