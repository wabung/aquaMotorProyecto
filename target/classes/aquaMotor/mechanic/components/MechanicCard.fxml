<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="250.0" prefWidth="580.0" style="-fx-background-color: transparent;" stylesheets="@../styles/components.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1">

    <HBox fx:id="Card" alignment="CENTER_LEFT" layoutX="30.0" layoutY="20.0" prefHeight="210.0" prefWidth="520.0" spacing="40">
        <padding>
            <Insets bottom="15" left="25" right="40" top="15" />
        </padding>

        <StackPane maxHeight="180.0" maxWidth="190.0" minHeight="175.0" minWidth="180.0" prefHeight="175.0" prefWidth="190.0" styleClass="round-image-box">
            <ImageView fitHeight="155.0" fitWidth="165.0" pickOnBounds="true" preserveRatio="true">
                <Image url="@../images/mario.png" />
            </ImageView>
        </StackPane>

        <GridPane alignment="CENTER_LEFT" hgap="30" vgap="12">
            <Label styleClass="label-title" text="NAME:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <Label styleClass="label-title" text="EMAIL:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <Label styleClass="label-title" text="SPECIALTY:" GridPane.columnIndex="0" GridPane.rowIndex="2" />

            <Label styleClass="label-result" text="MARIO BROS" GridPane.columnIndex="1" GridPane.rowIndex="0" />
            <Label styleClass="label-result" text="mario@nintendo.com" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <Label styleClass="label-result" text="PLUMBER" GridPane.columnIndex="1" GridPane.rowIndex="2" />

            <columnConstraints>
                <ColumnConstraints />
                <ColumnConstraints />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
            </rowConstraints>
        </GridPane>
    </HBox>

</AnchorPane>
